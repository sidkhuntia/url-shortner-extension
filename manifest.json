{
    "name": "Url Shortener",
    "description": "A simple url shortener",
    "version": "0.1",
    "manifest_version": 2,
    "author": "Siddhartha Khuntia",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      },
      "permissions": ["contextMenus","activeTab", "storage", "tabs"],
    "background": {
        "scripts": ["background.js"]    
    }   

} 